{% extends "layout.html" %}
{% block content %}
<body ng-app="sencaurl">
    <div class="container" ng-controller="url">
        <h1 class="text-center">Add URL</h1>
        <hr>
        <form>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="url" class="form-control" id="url" name="url" placeholder="http:// or https://">
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-primary">Add URL</button>
            </div>
        </form>
    </div>
    <br>
    <br>
    <br>
    <div id="footer" onclick="window.location='https://twitter.com/thedustmakers';"></div>
</body>
{% endblock %}