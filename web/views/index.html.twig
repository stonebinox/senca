{% extends "layout.html" %}
{% block content %}
<body ng-app="senca">
    <div ng-controller="editor">
        <div id="left">
            <div class="container-fluid">
                <div class="text-center"><img src="images/senca_logo.png" alt="Senca" class="img-thumbnail" style="width:100px;"></div>
                <hr>
                <p class="lead text-center">Start typing to let Senca suggest content for you.</p>
                <hr>
                <div id="suggestions"><small>Suggestions show up here.</small></div>
            </div>
        </div>
        <div id="right" ng-init="loadEditor()">
            <div class="container" data-editable data-name="main-content" style="width:100%;margin-top:20px;">
                <h1 class="text-center">Awesome Title</h1>
                <p>Begin writing by clicking on the blue pencil at the top-left corner of the screen and then edit this line.</p>
            </div>
            <div style="display:none" id="parser"></div>
        </div>
    </div>
    <div class="container-fluid">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
    <br>
    <br>
    <br>
    <!--<div id="footer" onclick="window.location='https://twitter.com/thedustmakers';"></div>-->
</body>
{% endblock %}